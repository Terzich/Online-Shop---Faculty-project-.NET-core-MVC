@using OnlineShopPodaci.Model;
@using OnlineShop.ViewModels;


@model List<ShowSubCategoriesVM>

@{
    ViewData["Title"] = "ShowSubcategories";

}


<h1>@Model.FirstOrDefault().CategoryName</h1>
<br />

<style>
    #maindiv {
        width: 23%;
        float: left;
        margin: 10px;
        padding:0px;
        border-radius: 5px;
    }

    #maindiv:hover{
        opacity:0.9;
        border:1px solid black;
    }


</style>

@foreach (var x in Model)
{
    <div id="maindiv" class="col-lg-3 col-md-4 col-sm-6 mb-4">
        <div class="card h-100">
            <a href="#"><img class="card-img-top" src="http://placehold.it/700x400" alt=""></a>
            <div class="card-body">
                <h4 class="card-title">
                    <a href="/Product/ShowProducts?ID=@x.SubCategoryID">@x.SubCategoryName</a>
                </h4>
            </div>
        </div>
    </div>
}







