@using OnlineShop.ViewModels

@{
    ViewData["Title"] = "ProductDetails";
}
@model ProductDetailsVM

<h1>Ime podkategorije : @Model.SubCategoryName</h1>

<style>
    #mainDiv{
        height:520px;
        border:1px solid black;
        background-color:red;
        margin:auto;
    }

    #leftDiv{
        background-color:gray;
        float:left;
        height:520px;
        width:50%;
    }
    
    #rightDiv{
        background-color:yellow;
        float:left;
        height:520px;
        width:50%;
    }

    #title {
        background-color:aqua;
        width:100%;
        height:120px;
    }

    #rightContent{
        width:100%;
        height:250px;
        background-color:bisque;
    }

    #rightFooter{



    }

    #image{
        width:80%;
        height:80%;
        background-color:white;
        margin:55px;
    }

</style>



<div id="mainDiv">
    <div id="leftDiv">
        <div id="image">

        </div>


    </div>
        <div id="rightDiv">
            <div id="title">

                <h1>@Model.ProductName</h1>
                <h4>Proizvođač : @Model.ManufacturerName</h4>
                <p>Ime podkategorije : @Model.SubCategoryName</p>
            </div>
            <div id="rightContent">
                ovdje detaljan opis
                @Model.Description
                na stanju
            </div>
            <div id="rightFooter">

                <p>Cijena: @Model.UnitPrice KM</p>

                DODAJ U KORPU

            </div>

        </div>
</div>






