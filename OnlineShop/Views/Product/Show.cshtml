@using OnlineShopPodaci.Model;

@model OnlineShop.ViewModels.SohwProductForManageLIST

@{
    ViewData["Title"] = "Show";


}

<h1>Prikaz svih proizvoda</h1>

<table border="1">
    <tr>
        <th>Proizvod ID</th>
        <th>Broj proizvoda</th>
        <th>Naziv podkategorije</th>
        <th>Naziv proizvodjaca</th>
        <th>Naziv proizvoda</th>
        <th>Opis</th>
        <th>Cijena</th>
    </tr>

    @foreach (var p in Model.ListOfProducts)
    {
        <tr>
            <td>@p.ProductID</td>
            <td>@p.ProductNumber</td>
            <td>@p.SubCategoryName</td>
            <td>@p.ManufacturerName</td>
            <td>@p.ProductName</td>
            <td>@p.Description</td>
            <td>@p.UnitPrice</td>
            <td>
                <a href="/Product/Delete?ID=@p.ProductID">Obrisi</a>
            </td>
            <td>
                <a href="/Product/AddProduct?ProductID=@p.ProductID">Izmjeni</a>
            </td>
        </tr>
    }
</table>
<br />

<form action="/Product/AddProduct">
    <input type="submit" value="Dodaj novi proizvod" />
</form>
